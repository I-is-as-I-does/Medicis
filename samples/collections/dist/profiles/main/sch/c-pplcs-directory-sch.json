{
    "$schema": "http:\/\/json-schema.org\/draft-07\/schema",
    "$id": "c-pplcs-directory.json",
    "title": "People and Places | Directory",
    "type": "object",
    "required": [
        "name"
    ],
    "properties": {
        "label": {
            "$id": "#\/properties\/label",
            "title": "Label",
            "type": "string",
            "example": "Record Label"
        },
        "name": {
            "$id": "#\/properties\/name",
            "title": "Name",
            "type": "string",
            "example": "Nobody Bob"
        },
        "activities": {
            "$id": "#\/properties\/activities",
            "title": "Activities",
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "$id": "#\/properties\/activities\/items",
                "title": "ActivitiesRefs",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "relPointer": {
                        "$id": "#\/properties\/activities\/items\/properties\/relPointer",
                        "title": "RelPointer",
                        "type": "string",
                        "example": "c-pplcs-activities-data.json#\/f4_r5e5-HRz5f8-tZ45fR",
                        "pattern": "^c\\-pplcs\\-activities\\.json#\/[\\w\\-]{21}\\$"
                    },
                    "relLabel": {
                        "$id": "#\/properties\/activities\/items\/properties\/relLabel",
                        "title": "RelLabel",
                        "type": "string",
                        "example": "Related Item Label"
                    }
                }
            }
        },
        "emails": {
            "$id": "#\/properties\/emails",
            "title": "Emails",
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "$id": "#\/properties\/emails\/items",
                "title": "EmailsItems",
                "type": "string",
                "example": "some.name@domain.xyz",
                "format": "email"
            }
        },
        "addresses": {
            "$id": "#\/properties\/addresses",
            "title": "Addresses",
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "$id": "#\/properties\/addresses\/items",
                "title": "AddressesItems",
                "type": "string",
                "example": "10 NowhereStreet, SomeCity (us)"
            }
        },
        "websites": {
            "$id": "#\/properties\/websites",
            "title": "Websites",
            "type": "array",
            "uniqueItems": true,
            "additionalItems": true,
            "items": {
                "$id": "#\/properties\/websites\/items",
                "title": "WebsitesItems",
                "type": "string",
                "example": "http:\/\/someone-website.xyz"
            }
        }
    },
    "additionalProperties": false
}